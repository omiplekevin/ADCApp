<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/_5dp"
              android:orientation="vertical">

    <FrameLayout
        android:id="@+id/mediaHeaders"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="@dimen/_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageLocation"
                android:layout_width="0dp"
                android:layout_height="@dimen/_128dp"
                android:layout_marginEnd="@dimen/_1dp"
                android:layout_marginRight="@dimen/_1dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/imageCapture"
                android:layout_width="0dp"
                android:layout_height="@dimen/_128dp"
                android:layout_marginLeft="@dimen/_1dp"
                android:layout_marginStart="@dimen/_1dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:visibility="visible"/>
        </LinearLayout>

        <TextView
            android:id="@+id/placeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|bottom"
            android:background="@color/colorAlphaBlackBackground"
            android:padding="@dimen/_5dp"
            android:textColor="@color/color_3b3b3b"
            android:textSize="@dimen/_15sp"
            android:textStyle="bold"
            android:visibility="visible"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="@dimen/_10dp">

        <TextView
            android:id="@+id/caption"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="3"
            android:text="@string/lorem_ipsum"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:src="@drawable/ic_arrow_right"/>

    </LinearLayout>


</LinearLayout>